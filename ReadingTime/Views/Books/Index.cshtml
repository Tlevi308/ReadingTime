@model IEnumerable<ReadingTime.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>My List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<from asp-action="Search">
    <input name="query" placeholder="Search book" />
    <input type="submit" value="Search" class="btn btn-primary"/>
</from>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Read)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Read)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Title">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Title">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Title">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
